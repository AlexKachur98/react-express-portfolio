{
    "name": "my-portfolio-backend",
    "version": "3.0.0",
    "description": "COMP229 Assignment 2 - MERN Portfolio Backend",
    "author": "Alex Kachur",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "postinstall": "npm install --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server.js --exec babel-node",
        "client": "npm run dev --prefix client",
        "build:client": "npm run build --prefix client",
        "gcp-build": "npm run postinstall && npm run build:client",
        "start": "node server.js",
        "lint": "eslint .",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config tests/jest.config.js",
        "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config tests/jest.config.js tests/unit",
        "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config tests/jest.config.js tests/integration",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config tests/jest.config.js --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config tests/jest.config.js --coverage",
        "migrate:assets": "node scripts/migrateAssetPaths.js",
        "cy:open": "cypress open --config-file tests/e2e/cypress.config.js",
        "cy:run": "cypress run --config-file tests/e2e/cypress.config.js",
        "test:e2e": "start-server-and-test start http://localhost:3000 cy:run"
    },
    "dependencies": {
        "@babel/runtime": "^7.25.0",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "concurrently": "^8.2.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-jwt": "^8.4.1",
        "express-rate-limit": "^7.4.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.5.1",
        "xss": "^1.0.15"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.8",
        "@babel/core": "^7.24.9",
        "@babel/node": "^7.24.8",
        "@babel/preset-env": "^7.24.8",
        "@babel/preset-react": "^7.24.0",
        "@eslint/js": "^9.39.1",
        "@testing-library/jest-dom": "^6.4.0",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^14.5.0",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.0.0",
        "nodemon": "^3.1.4",
        "supertest": "^7.1.4",
        "cypress": "^13.13.0",
        "start-server-and-test": "^2.0.0"
    }
}
